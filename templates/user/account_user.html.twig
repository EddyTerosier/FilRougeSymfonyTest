{% extends 'base.html.twig' %}

{% block title %}Mon compte - Dream-Gym{% endblock %}

{% block body %}
    <div class="container-connexion d-flex flex-column align-items-center">
        <h1 class="mt-4">Bienvenue sur ton compte {{app.user.firstName}}</h1>
        <div class="container d-flex col-md-12">
        {% include 'partials/_side_barUser.html.twig' %}
        <div class="col-md-8 my-5">
        {% block dashboard %}
           {% block title_dashboard %}
                <h1>Ma progression<h1>
           {% endblock %}            
            <h4 class="text-center">Programme Débutant</h4>
            <div class="progress w-50 my-2 mx-auto">
                <div class="progress-bar progress-bar-striped progress-bar-animated"
                        role="progressbar"
                        aria-label="Progression"
                        aria-valuenow="4"
                        aria-valuemin="0"
                        aria-valuemax="5"
                        style="width:90%"> 90%
                </div>
            </div>            
            <h4 class="text-center">Programme Intermédiaire</h4>
            <div class="progress w-50 my-2 mx-auto">
                <div class="progress-bar progress-bar-striped progress-bar-animated"
                        role="progressbar"
                        aria-label="Progression"
                        aria-valuenow="4"
                        aria-valuemin="0"
                        aria-valuemax="5"
                        style="width:50%"> 50%
                </div>
            </div>            
            <h4 class="text-center">Programme Expert</h4>
            <div class="progress w-50 my-2 mx-auto">
                <div class="progress-bar progress-bar-striped progress-bar-animated"
                        role="progressbar"
                        aria-label="Progression"
                        aria-valuenow="4"
                        aria-valuemin="0"
                        aria-valuemax="5"
                        style="width:10%"> 10%
                </div>
            </div>
        {% endblock %}
        </div>
    </div>
        <hr class="border-light w-100 my-5">
    </div>
{% endblock %}